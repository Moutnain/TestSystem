<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/baise" android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="本次得分"
            android:textColor="#698B22"
            android:textSize="40dp"/>

        <TextView
            android:id="@+id/tvtestgrade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#698B22"
            android:textSize="50dp" />
    </LinearLayout>
    <View
        android:layout_height="0.5dip"
        android:layout_width="match_parent"
        android:background="@color/line_color" />
    <GridLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="2"
        android:columnCount="2">
        <TextView
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#008B00"
            android:gravity="center"
            android:textSize="30dp"
            android:text="正确："/>
        <TextView
            android:id="@+id/tvshowgradetrue"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#008B00"
            android:gravity="center"
            android:textSize="30dp"
            android:text="20"/>
        <TextView
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8B1A1A"
            android:gravity="center"
            android:textSize="30dp"
            android:text="错误："/>
        <TextView
            android:id="@+id/tvshowgradefalse"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8B1A1A"
            android:gravity="center"
            android:textSize="30dp"
            android:text="10"/>
    </GridLayout>
    <View
        android:layout_height="0.5dip"
        android:layout_width="match_parent"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnshowgradecontinue"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/design_view_point"
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="继续考试"
                android:textColor="#ffffff"
                android:textSize="24dp" />
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnshowgradeall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="查看全部"
                android:textColor="#8B1A1A"
                android:textSize="22dp" />
            <Button
                android:id="@+id/btnshowgradefalse"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="只看错题"
                android:textColor="#8B1A1A"
                android:textSize="22dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>