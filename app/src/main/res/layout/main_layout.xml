<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/laymiantop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvlibraryname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingStart="20dp"
            android:textColor="@color/main"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvpercent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/main"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/line_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:columnCount="2"
            app:rowCount="3">

            <Button
                android:id="@+id/btnbegintest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_columnSpan="2"
                android:layout_marginTop="20dp"
                app:layout_rowSpan="2"
                android:background="@null"
                android:drawableTop="@drawable/begin"
                android:gravity="center"
                android:text="开始考试"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnwrongtest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_gravity="center"
                android:gravity="center"
                android:text="错题考试"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btntestrecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_gravity="center"
                android:gravity="center"
                android:text="考试记录"
                android:textSize="16sp" />
        </android.support.v7.widget.GridLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:columnCount="1"
            app:rowCount="2">


            <Button
                android:id="@+id/btnqiehuan"
                app:layout_columnWeight="1"
                app:layout_gravity="center"
                app:layout_rowWeight="1"
                android:background="@null"
                android:drawableTop="@drawable/qiehuan"
                android:text="切换题库"
                android:textSize="18sp"
                android:layout_width="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />

            <Button
                android:id="@+id/btninputlibrary"
                app:layout_columnWeight="1"
                app:layout_gravity="center"
                app:layout_rowWeight="1"
                android:background="@null"
                android:drawableTop="@drawable/newku"
                android:text="导入题库"
                android:textSize="18sp" />
        </android.support.v7.widget.GridLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:columnCount="1"
            app:rowCount="2">

            <Button
                android:id="@+id/btncollecttitle"
                app:layout_columnWeight="1"
                app:layout_gravity="center"
                app:layout_rowWeight="1"
                android:background="@null"
                android:drawableTop="@drawable/collection"
                android:text="我的收藏"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />

            <Button
                android:id="@+id/outquestion"
                app:layout_columnWeight="1"
                app:layout_gravity="center"
                app:layout_rowWeight="1"
                android:background="@null"
                android:drawableTop="@drawable/outimg"
                android:text="导出题目"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />
        </android.support.v7.widget.GridLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:columnCount="1"
            app:rowCount="2">

            <Button
                android:id="@+id/btnwrongtitle"
                app:layout_columnWeight="1"
                app:layout_gravity="center"
                app:layout_rowWeight="1"
                android:background="@null"
                android:drawableTop="@drawable/wrongimg"
                android:text="我的错题"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />

            <Button
                android:id="@+id/btndeletelibrary"
                app:layout_columnWeight="1"
                app:layout_gravity="center"
                app:layout_rowWeight="1"
                android:background="@null"
                android:drawableTop="@drawable/delete"
                android:text="删除题库"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />
        </android.support.v7.widget.GridLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:columnCount="1"
            app:rowCount="2">

            <Button
                android:id="@+id/btnallquestiontitle"
                app:layout_columnWeight="1"
                app:layout_gravity="center"
                app:layout_rowWeight="1"
                android:background="@null"
                android:drawableTop="@drawable/inputimg"
                android:text="浏览题目"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />

            <Button
                android:id="@+id/btnabout"
                app:layout_columnWeight="1"
                app:layout_gravity="center"
                app:layout_rowWeight="1"
                android:background="@null"
                android:drawableTop="@drawable/about"
                android:gravity="center"
                android:text="关于"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />
        </android.support.v7.widget.GridLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:divider="@drawable/layout_line">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="© 2017 贵港信息中心, luozheng."
            android:textColor="@color/main"
            android:textSize="12dp" />

    </LinearLayout>
</LinearLayout>