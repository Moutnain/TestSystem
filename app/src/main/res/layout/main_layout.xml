<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
            android:id="@+id/laymiantop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvlibraryname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingStart="20dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvpercent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="20sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/line_color" />

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:columnCount="2"
            android:rowCount="3">

            <Button
                android:id="@+id/btnbegintest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="20dp"
                android:layout_rowSpan="2"
                android:background="@null"
                android:drawableTop="@drawable/begin"
                android:gravity="center"
                android:text="开始考试"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnwrongtest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:text="错题考试"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btntestrecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:text="考试记录"
                android:textSize="16sp" />
        </GridLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:columnCount="1"
            android:rowCount="2">


            <Button
                android:id="@+id/btnqiehuan"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_rowWeight="1"
                android:background="@null"
                android:drawableTop="@drawable/qiehuan"
                android:text="切换题库"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />

            <Button
                android:id="@+id/btninputlibrary"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_rowWeight="1"
                android:background="@null"
                android:drawableTop="@drawable/newku"
                android:text="导入新库"
                android:textSize="18sp" />
        </GridLayout>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:columnCount="1"
            android:rowCount="2">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />

            <Button
                android:id="@+id/btncollecttitle"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_rowWeight="1"
                android:background="@null"
                android:drawableTop="@drawable/collection"
                android:text="我的收藏"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />

            <Button
                android:id="@+id/outquestion"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_rowWeight="1"
                android:background="@null"
                android:drawableTop="@drawable/outimg"
                android:text="导出题目"
                android:textSize="18sp" />
        </GridLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:columnCount="1"
            android:rowCount="2">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />

            <Button
                android:id="@+id/btnwrongtitle"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_rowWeight="1"
                android:background="@null"
                android:drawableTop="@drawable/wrongimg"
                android:text="我的错题"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />

            <Button
                android:id="@+id/btndeletelibrary"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_rowWeight="1"
                android:background="@null"
                android:drawableTop="@drawable/delete"
                android:text="删除题库"
                android:textSize="18sp" />
        </GridLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:columnCount="1"
            android:rowCount="2">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />

            <Button
                android:id="@+id/btnallquestiontitle"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_rowWeight="1"
                android:background="@null"
                android:drawableTop="@drawable/inputimg"
                android:text="查看全部"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />

            <Button
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_rowWeight="1"
                android:background="@null"
                android:drawableTop="@drawable/about"
                android:text="关于我们"
                android:textSize="18sp" />
        </GridLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:divider="@drawable/layout_line">

            <ImageView
                android:id="@+id/img_loading"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
</LinearLayout>